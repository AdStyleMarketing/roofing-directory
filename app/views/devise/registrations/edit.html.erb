<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="input-field">
    <%= f.input_field :name, required: true, autofocus: true %>
    <label for="name">Name</label>
  </div>
  <div class="input-field">
    <%= f.input_field :email, required: true %>
    <label for="email">Email</label>
  </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
  <div class="input-field">
    <%= f.input_field :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
    <label for="password">Password</label>
  </div>
  <div class="input-field">
    <%= f.input_field :password_confirmation, required: false %>
      <label for="password_confiramtion">Confirm Password</label>
  </div>
  <div class="input-field">
    <%= f.input_field :current_password, hint: "we need your current password to confirm your changes", required: true %>
    <label for="current_password">Current Password</label>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
    <%=	link_to 'change avatar', 'http://en.gravatar.com', {:class=> 'waves-effect waves-light btn' } %>
  </div>

  <hr>
  <%=	gravatar_tag current_user.email, size: 100, :html => { :class => "circle" } %>


<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
